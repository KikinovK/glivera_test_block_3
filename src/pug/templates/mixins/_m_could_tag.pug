mixin could_tag(data)
  div(class=`${data.gl_class}`)
    h3(class=`${data.gl_class}__title`)= data.title
    ul(class=`${data.gl_class}__list`)
      each item in data.items
        li(class=`${data.gl_class}__item`)
          a(class=`${data.gl_class}__link ${data.gl_class}__link--${item.md_size}`
            href=itemhref)= item.title
